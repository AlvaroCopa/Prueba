<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo"
    tools:context=".ViewDoctorActivity">
    <ImageView
        android:id="@+id/idlogoDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/doctor"
        android:paddingTop="35dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/idTextDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idlogoDoctor"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Dr. Diego de la Fuente\nPEDIATRA"
        android:layout_marginBottom="180dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTextDoctor"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimary"
            android:text="Receta"
            android:drawableLeft="@drawable/estetoscopio"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="@drawable/button_selector"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimary"
            android:text="Historial"
            android:drawableStart="@drawable/historial"
            />
    </LinearLayout>
</RelativeLayout>